<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Calculator" Height="350" Width="525">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
			<ColumnDefinition Width="Auto"/>
		</Grid.ColumnDefinitions>

		<TextBox x:Name="textBox1" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="5" Margin="10"/>
		<TextBox x:Name="textBox2" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="5" Margin="10"/>
		<Button x:Name="addButton" Content="+" Grid.Row="2" Grid.Column="0" Margin="10" Click="AddButton_Click"/>
		<Button x:Name="subtractButton" Content="-" Grid.Row="2" Grid.Column="1" Margin="10" Click="SubtractButton_Click"/>
		<Button x:Name="multiplyButton" Content="x" Grid.Row="2" Grid.Column="2" Margin="10" Click="MultiplyButton_Click"/>
		<Button x:Name="divideButton" Content="/" Grid.Row="2" Grid.Column="3" Margin="10" Click="DivideButton_Click"/>
		<TextBlock x:Name="resultTextBlock" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="5" Margin="10"/>
	</Grid>
</Window>
